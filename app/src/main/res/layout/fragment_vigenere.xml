<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_grey">
<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/parentVig">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/actionBarvigcipher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarvigcipher"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:id="@+id/inputcipherlayoutvig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/actionBarvigcipher"
            android:background="@drawable/edittextborder"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/inputlabelvig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Input"
                android:textColor="@color/Dark_Green"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gameciphervig"
                android:layout_below="@+id/inputlabelvig"
                android:scrollbars="vertical|horizontal"
                android:textColor="@color/Neon_Green"
                android:layout_margin="10dp"
                />
        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_below="@+id/inputcipherlayoutvig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/Floating_hint"
            android:textColorHint="@color/Darker_Green"
            android:id="@+id/inputKeyLayoutVig"
            android:layout_margin="10dp"
            android:paddingTop="5dp"
            android:visibility="gone">
        <EditText
            android:id="@+id/inputkey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Keyword"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColor="@color/Neon_Green"
            app:theme="@style/EditTextTheme"/>
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputcipherlayoutvig"
            android:layout_margin="10dp"
            android:id="@+id/keyoutputgroup"
            android:background="@drawable/edittextborder">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/keyoutputlabel"
                android:text="Key"
                android:textColor="@color/Dark_Green"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/keyoutputfromhome"
                android:layout_below="@id/keyoutputlabel"
                android:textColor="@color/Neon_Green"
                android:layout_margin="10dp"
                />
        </RelativeLayout>
<Space
    android:id="@+id/spacevig"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/actionBarvigcipher"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/keyoutputgroup"
        android:focusable="true"
        android:background="@drawable/edittextborder"
        android:id="@+id/OutputGroupVig"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/outputLabelVig"
            android:text="@string/vig_output_label"
            android:textColor="@color/Dark_Green" />
        <TextView
            android:id="@+id/Output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/Neon_Green"
            android:layout_below="@+id/outputLabelVig"
            android:textIsSelectable="true"/>
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vigBtnGroup"
            android:layout_below="@+id/inputKeyLayoutVig"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:visibility="gone">
        <Button
            android:id="@+id/btnEnc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encrypt"
            android:textColor="@color/Dark_Green"
            android:background="@drawable/buttonselector"
            android:layout_marginRight="5dp"
             />
        <Button
            android:id="@+id/btnDec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decrypt"
            android:layout_toRightOf="@+id/btnEnc"
            android:textColor="@color/Dark_Green"
            android:background="@drawable/buttonselector"
            android:layout_marginLeft="5dp"
             />
        </RelativeLayout>
<RelativeLayout
    android:id="@+id/back_resetgroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/vighelp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:visibility="gone">
    <Button
        android:id="@+id/backButtonGameVig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Back To Game"
        android:background="@drawable/buttonselector"
        android:textColor="@color/Dark_Green"
        />
</RelativeLayout>
    <Button
        android:id="@+id/vighelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How is it done?"
        android:layout_marginLeft="10dp"
        android:textColor="@color/Dark_Green"
        android:background="@drawable/buttonselector"
        android:layout_below="@+id/OutputGroupVig"
        android:layout_alignParentStart="true"
       />
    <Button
        android:id="@+id/vigsharebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:background="@drawable/buttonselector"
        android:textColor="@color/Dark_Green"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/OutputGroupVig"
        android:layout_marginRight="10dp"/>
</RelativeLayout>
</ScrollView>