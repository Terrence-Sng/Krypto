<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
        android:focusableInTouchMode="true"
        >

    <android.support.design.widget.TextInputLayout
        android:layout_alignParentTop="true"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/inputHome"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:background="@drawable/edittextborder"
        app:hintTextAppearance="@style/Floating_hint"
        android:textColorHint="@color/Dark_Green"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <EditText
            android:id="@+id/homeText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Enter text here"
            android:gravity="top"
            android:paddingTop="20dp"
            android:background="@color/transparent"
            android:textColor="@color/Neon_Green"
            android:textCursorDrawable="@null"
            />
    </android.support.design.widget.TextInputLayout>
    <RelativeLayout
        android:id="@+id/spinnergrouphome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputHome"
        android:layout_centerHorizontal="true">
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/spinnerlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select one"
        android:textColor="@color/Neon_Green"
        android:layout_alignStart="@+id/spinnergrouphome1"/>
    <RelativeLayout
    android:id="@+id/spinnergrouphome1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/edittextborder"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/spinnerlabel">
    <Spinner
        android:id="@+id/spinnerchoice"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/Dark_Green"
        android:spinnerMode="dropdown"
        android:visibility="visible"
        />
    </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/homebuttongroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/spinnergrouphome"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/btnngram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate N-Gram"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:textColor="@color/Dark_Green"
            android:background="@drawable/buttonselector"/>

        <Button
            android:id="@+id/btnioc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Calculate Index of Coincidence"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnngram"
            android:textColor="@color/Dark_Green"
            android:background="@drawable/buttonselector"
            />

        <Button
            android:id="@+id/btnperiod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Calculate Period"
            android:layout_below="@id/btnioc"
            android:layout_centerHorizontal="true"
            android:textColor="@color/Dark_Green"
            android:background="@drawable/buttonselector"
            />
    </RelativeLayout>

    <RadioGroup
        android:layout_marginTop="10dp"
        android:layout_width="393dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:id="@+id/radioGroup"
        android:visibility="invisible"
        android:layout_below="@+id/spinnergrouphome"
        android:layout_alignParentStart="true"
        >
        <RadioButton
            android:id="@+id/radsub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subsitution"
            android:layout_marginTop="20dp"
            android:layout_weight="0.3"
            android:visibility="visible"
            android:buttonTint="@color/Dark_Green"
            android:textColor="@color/Dark_Green"/>
        <RadioButton
            android:id="@+id/radvig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vigenere"
            android:layout_marginTop="20dp"
            android:layout_weight="0.3"
            android:visibility="visible"
            android:buttonTint="@color/Dark_Green"
            android:textColor="@color/Dark_Green"/>

        <RadioButton
            android:id="@+id/radtrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_marginTop="20dp"
            android:text="Transposition"
            android:visibility="visible"
            android:buttonTint="@color/Dark_Green"
            android:textColor="@color/Dark_Green"
            />

    </RadioGroup>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/keylayouthome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        app:hintTextAppearance="@style/Floating_hint"
        android:textColorHint="@color/Dark_Green"
        android:backgroundTint="@color/Dark_Green"
        android:visibility="gone">
        <EditText
            android:id="@+id/inputkey"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Enter Keyword/ Block Size"
            android:backgroundTint="@color/Dark_Green"
            android:textColor="@color/Dark_Green"
            android:inputType="textPersonName"
            android:visibility="visible"
            />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btngo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go!"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_below="@+id/keylayouthome"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:textColor="@color/Dark_Green"
        android:background="@drawable/buttonselector"/>

</RelativeLayout>
</ScrollView>