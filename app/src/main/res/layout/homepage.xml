<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:layout_alignParentTop="true"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/input"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:background="@drawable/edittextborder"
        app:hintTextAppearance="@style/Floating_hint"
        android:textColorHint="@color/Dark_Green"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <EditText
            android:id="@+id/homeText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Enter text here"
            android:gravity="top"
            android:paddingTop="20dp"
            android:background="@color/transparent"
            android:textColor="@color/Neon_Green"
            android:textCursorDrawable="@null"
            />
    </android.support.design.widget.TextInputLayout>


    <Spinner
        android:id="@+id/spinnerchoice"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_marginTop="20dp"
        android:layout_below="@id/input"
        android:visibility="visible"
        android:layout_centerHorizontal="true"/>

<RelativeLayout
    android:id="@+id/homebuttongroup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="invisible"
    android:gravity="center"
    android:layout_below="@+id/input"
    android:layout_centerHorizontal="true">
    <Button
        android:id="@+id/btnngram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate N-Gram"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnioc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Calculate Index of Coincidence"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnngram"
      />

    <Button
        android:id="@+id/btnperiod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Calculate Period"
        android:layout_below="@id/btnioc"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>

    <RadioGroup
        android:layout_width="393dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:id="@+id/radioGroup"
        android:visibility="invisible"
        android:layout_below="@+id/spinnerchoice"
        android:layout_alignParentStart="true">
        <RadioButton
            android:id="@+id/radsub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subsitution"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tvchoose"
            android:visibility="visible"/>

        <RadioButton
            android:id="@+id/radvig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vigenere"
            app:layout_constraintLeft_toRightOf="@+id/radsub"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tvchoose"
            android:visibility="visible"/>

        <RadioButton
            android:id="@+id/radtrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="32dp"
            android:text="Transposition"
            android:visibility="visible"
            app:layout_constraintLeft_toRightOf="@+id/radvig"
            app:layout_constraintTop_toBottomOf="@+id/tvchoose" />

    </RadioGroup>

    <android.support.design.widget.TextInputLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/radioGroup"
    android:layout_centerHorizontal="true"
    app:hintTextAppearance="@style/Floating_hint"
    android:textColorHint="@color/Dark_Green"
    android:visibility="invisible">
    <EditText
        android:id="@+id/inputkey"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Enter Keyword/ Block Size"
        android:inputType="textPersonName"
        android:visibility="visible"
      />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btngo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go!"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:textColor="@color/Dark_Green"
        android:background="@drawable/buttonselector"/>

</RelativeLayout>
