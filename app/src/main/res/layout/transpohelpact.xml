<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@color/dark_grey">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/actionBartranspohelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbartranspohelp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>
<ScrollView
    android:layout_below="@id/actionBartranspohelp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_below="@+id/actionBartranspohelp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/inputlayouttranspohelp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextborder">
                    <TextView
                        android:id="@+id/inputlabeltranspohelp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Dark_Green"
                        android:text="Input"
                        android:layout_marginTop="10dp"/>
                    <LinearLayout
                        android:layout_below="@+id/inputlabeltranspohelp"
                        android:id="@+id/textContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:scrollbars="vertical|horizontal">
                    </LinearLayout>
            </RelativeLayout>
        <RelativeLayout
            android:id="@+id/keyoutputlayouttranspohelp"
            android:layout_below="@+id/inputlayouttranspohelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittextborder">
        <TextView
            android:id="@+id/keysizelabeltranspohelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Block Size"
            android:textColor="@color/Dark_Green"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/keysizetranspohelp"
            android:layout_below="@id/keysizelabeltranspohelp"
            android:layout_width="wrap_content"
            android:layout_height= "wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/Neon_Green"/>
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/outputtranspohelp"
                android:layout_below="@+id/keyoutputlayouttranspohelp"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextborder">
                    <TextView
                        android:id="@+id/outputlabeltranspohelp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Dark_Green"
                        android:text="Output"
                        android:layout_marginTop="10dp"/>
                    <LinearLayout
                        android:layout_below="@+id/outputlabeltranspohelp"
                        android:id="@+id/outputlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:scrollbars="vertical|horizontal">
                    </LinearLayout>
            </RelativeLayout>
        <RelativeLayout
            android:id="@+id/endresultlayouttranspohelp"
            android:layout_below="@id/outputtranspohelp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:background="@drawable/edittextborder"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/endresultlabeltranspohelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Neon_Green"
                android:text="End Results"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_below="@+id/endresultlabeltranspohelp"
                android:id="@+id/endresultstranspohelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/Neon_Green" />
        </RelativeLayout>

        <LinearLayout
        android:layout_below="@+id/endresultlayouttranspohelp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/transpohelpprevious"
            android:background="@drawable/ic_skip_previous"
            />
        <Button
            android:id="@+id/transpohelpreset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_refresh"/>
        <Button
            android:id="@+id/transpohelpnext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_skip_next"
            />
    </LinearLayout>
 </RelativeLayout>
</ScrollView>
</RelativeLayout>
