<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/redwall">

    <ImageButton
        android:id="@+id/book"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/book5"
        android:background="@null"
        android:layout_marginEnd="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="31dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <ImageButton
        android:id="@+id/door1"
        android:layout_width="123dp"
        android:layout_height="143dp"
        android:src="@drawable/dbldoor1"
        android:layout_above="@+id/book"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:layout_marginRight="144dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        android:layout_marginBottom="53dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="269dp"
        android:layout_height="67dp"
        android:text='SFGR SAXS GR AMLQYOSAE UY RTURSGSTSGNM LGOFAQ. YNT MAAE SN SYOA "NOAM" SN NOAM SFA ENNQ. SFAQACNQA, SFA BMRWAQ GR "NOAM". G WGRF YNT DNNE JTLI.'
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        android:layout_marginTop="48dp"
        android:layout_marginRight="71dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/door2"
        android:layout_width="128dp"
        android:layout_height="174dp"
        android:src="@drawable/dbldoor2"
        android:visibility="invisible"
        android:layout_marginRight="142dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        android:layout_marginBottom="35dp" />

    <ImageView
        android:id="@+id/scroll"
        android:layout_width="305dp"
        android:layout_height="181dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="53dp"
        android:layout_marginTop="149dp"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        android:src="@drawable/scroll" />

    <EditText
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="45dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Enter Answer"
        android:inputType="textPersonName"
        app:layout_constraintRight_toRightOf="@+id/scroll"
        app:layout_constraintTop_toTopOf="@+id/scroll"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btnsub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="109dp"
        android:text="submit"
        app:layout_constraintBottom_toBottomOf="@+id/scroll"
        app:layout_constraintRight_toRightOf="@+id/scroll"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/bookimg"
        android:layout_width="216dp"
        android:layout_height="235dp"
        android:layout_marginRight="107dp"
        android:layout_marginTop="158dp"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        android:src="@drawable/book5"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/bookclose"
        android:layout_width="42dp"
        android:layout_height="50dp"
        android:layout_marginRight="-22dp"
        android:layout_marginTop="-31dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="@+id/bookimg"
        app:layout_constraintTop_toTopOf="@+id/bookimg"
        android:src="@drawable/closebutton"
        android:visibility="invisible"/>


</android.support.constraint.ConstraintLayout>
