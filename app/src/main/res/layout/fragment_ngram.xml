<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ngramFrag">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_grey">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/inputPreviewFreq"
            android:background="@drawable/edittextborder"
            android:layout_margin="10dp">
        <TextView
            android:id="@+id/inputPre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input Preivew"
            android:textStyle="bold|italic"
            android:layout_marginTop="10dp"
            android:textColor="@color/Dark_Green"
            />
        <TextView
            android:id="@+id/EnterText"
            android:layout_height="150dp"
            android:layout_width="match_parent"
            android:layout_below="@+id/inputPre"
            android:layout_marginTop="10dp"
            android:textIsSelectable="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputPreviewFreq"
            android:id="@+id/barChartGroup"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittextborder">

            <TextView
            android:id="@+id/hist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textColor="@color/Dark_Green"
                android:textStyle="bold|italic"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:id="@+id/showFrequency"
                android:layout_below ="@+id/hist">
            </TextView>
            <com.github.mikephil.charting.charts.BarChart
            android:layout_height="200dp"
            android:layout_width="match_parent"
            android:id="@+id/barChart"
            android:layout_below ="@+id/hist"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"></com.github.mikephil.charting.charts.BarChart>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/barChartGroup"
            android:layout_margin="10dp">
        <TextView
            android:id="@+id/CountNGramText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Choose nGram"
            android:textColor="@color/Dark_Green"
            android:textSize="20sp"
            android:layout_alignBaseline="@+id/button"
            android:layout_alignBottom="@+id/button"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Count!"
            android:id="@+id/button"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/Dark_Green"
            android:background="@drawable/buttonselector"/>
        <Spinner
            android:id="@+id/spin"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="21dp"
            android:backgroundTint="@color/Dark_Green"
            android:layout_alignTop="@+id/CountNGramText"
            android:layout_toEndOf="@+id/CountNGramText" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
</RelativeLayout>