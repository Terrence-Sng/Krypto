<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_grey">
<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/parentVig">
        <RelativeLayout
            android:id="@+id/vigETextGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/Floating_hint"
                android:textColorHint="@color/Darker_Green"
                android:id="@+id/inputKeyLayoutVig">
            <EditText
                android:id="@+id/inputkey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Keyword"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="@color/Neon_Green"
                app:theme="@style/EditTextTheme"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutVig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/Floating_hint"
                android:textColorHint="@color/Darker_Green"
                android:layout_below="@id/inputKeyLayoutVig"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/inputPT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Text"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textColor="@color/Neon_Green"
                    app:theme="@style/EditTextTheme"/>
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vigBtnGroup"
        android:focusable="true"
        android:background="@drawable/edittextborder"
        android:id="@+id/OutputGroupVig"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/outputLabelVig"
            android:text="Vigenere Cipher Output"
            android:textColor="@color/Dark_Green"
            android:focusableInTouchMode="false"/>
        <TextView
            android:id="@+id/Output"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:textIsSelectable="true"
            android:textColor="@color/Dark_Green"
            android:layout_below="@+id/outputLabelVig" />
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vigBtnGroup"
            android:layout_below="@+id/vigETextGroup"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp">
        <Button
            android:id="@+id/btnEnc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encrypt"
            android:textColor="@color/Dark_Green"
            android:background="@drawable/buttonselector"
            android:layout_marginRight="5dp"
             />
        <Button
            android:id="@+id/btnDec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decrypt"
            android:layout_toRightOf="@+id/btnEnc"
            android:textColor="@color/Dark_Green"
            android:background="@drawable/buttonselector"
            android:layout_marginLeft="5dp"
             />
        </RelativeLayout>

    <Button
        android:id="@+id/btnreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="RESET"
        android:layout_below="@+id/OutputGroupVig"
        android:textColor="@color/Dark_Green"
        android:background="@drawable/buttonselector"/>

</RelativeLayout>
</ScrollView>