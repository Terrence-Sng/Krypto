<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/actionBarSubCipher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarSubCipher"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:backgroundTint="@color/Black"/>

    </android.support.design.widget.AppBarLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/actionBarSubCipher">

    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/actionBarSubCipher">
    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/keyoutputgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittextborder"
        android:layout_margin="10dp">
    <TextView
        android:id="@+id/keyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:text="Key"
        android:textColor="@color/Dark_Green"
        />
    <TextView
        android:id="@+id/outputkey"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:layout_below="@id/keyLabel"
        android:textColor="@color/Neon_Green"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/subcipheroutputGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/keyoutputgroup"
        android:layout_margin="10dp"
        android:background="@drawable/edittextborder">
        <TextView
            android:id="@+id/outputLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="23dp"
            android:text="Output"
            android:textColor="@color/Dark_Green"/>
        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:textIsSelectable="true"
            android:textColor="@color/Neon_Green"
            android:layout_below="@+id/outputLabel"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/btnhelp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="How is it Done?"
        android:textColor="@color/Dark_Green"
        android:background="@drawable/buttonselector"
        android:layout_below="@id/subcipheroutputGroup"
        android:layout_margin="10dp">
    </Button>
    <Button
        android:id="@+id/btnshare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:textColor="@color/Dark_Green"
        android:background="@drawable/buttonselector"
        android:layout_toEndOf="@+id/btnhelp"
        android:layout_alignBaseline="@+id/btnhelp"/>
</RelativeLayout>
</ScrollView>
</RelativeLayout>