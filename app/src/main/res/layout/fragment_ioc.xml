<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/userEmail"
        android:layout_width="339dp"
        android:layout_height="51dp"
        android:text="Caculate Index of Coincidence"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textGroupIOC"
        android:layout_below="@+id/userEmail">
    <TextView
        android:id="@+id/labelInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input Preview:"
        android:textStyle="bold|italic"
        android:layout_marginStart="6dp"
        android:textColor="@color/Black"/>

    <TextView
        android:id="@+id/inputpreviewIOC"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textIsSelectable="true"
        android:scrollbars="vertical"
        android:layout_below="@+id/labelInput"
        />

    <TextView
        android:id="@+id/labelIOC"
        android:textColor="@color/Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Index of Coincidence:"
        android:textStyle="bold|italic"
        android:layout_below="@+id/inputpreviewIOC"/>

    <TextView
        android:id="@+id/displayioc"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/labelIOC"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGroupIOC"
        android:layout_below="@+id/textGroupIOC">
    <Button
        android:id="@+id/calioc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calculate"
     />

    </RelativeLayout>

    <!--
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="11dp"
        android:text="Back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayioc" /> -->


        <!--app:layout_constraintLeft_toRightOf="@+id/btnBack"-->

</RelativeLayout>
</ScrollView>
