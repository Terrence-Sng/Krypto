<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/dark_grey">

<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/actionBartranspocipher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbartranspocipher"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actionBartranspocipher">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gamecipherinput"
        android:background="@drawable/edittextborder"
        android:layout_margin="10dp"
        >
        <TextView
            android:id="@+id/inputlabeltranspo"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/transpo_label"
            android:layout_margin="10dp"
           android:textColor="@color/Dark_Green"
           />
        <TextView
            android:id="@+id/inputviewtranspo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="@color/Neon_Green"
            android:layout_below="@+id/inputlabeltranspo"
           />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/blksizegroupfromhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextborder"
            android:layout_below="@+id/gamecipherinput"
            android:layout_marginLeft="10dp"
          >
            <TextView
                android:id="@+id/blksizefromhomelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Block Size"
                android:layout_margin="10dp"
                android:textColor="@color/Dark_Green"/>
            <TextView
                android:layout_centerInParent="true"
                android:layout_below="@+id/blksizefromhomelabel"
                android:id="@+id/blksizefromhome"
                android:layout_margin="10dp"
                android:textColor="@color/Neon_Green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/blockSizeGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/gamecipherinput"
            android:visibility="gone">
            <TextView
                android:id="@+id/blockSizeTitle"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:gravity="center"
                android:text="Block Size :"
                android:textColor="@color/Dark_Green"
                android:textSize = "20dp"
                android:layout_alignBottom="@+id/blkSizeLayout"
                />
            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/blockSizeTitle"
                android:id="@+id/blkSizeLayout"
                android:layout_marginTop="5dp"
                app:hintTextAppearance="@style/Floating_hint"
                android:textColorHint="@color/Darker_Green">
            <EditText
                android:id="@+id/blksize"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:theme="@style/EditTextTheme"
                android:paddingTop="@dimen/floating_hint_margin"
                android:textColor="@color/Neon_Green"
                android:textColorHint="@color/Darker_Green"
                android:textCursorDrawable="@null" />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/backButtonGameTranspo"
            android:layout_toEndOf="@+id/buttonGroupTranspo"
            android:layout_alignBottom="@id/buttonGroupTranspo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Back To Game"
            android:background="@drawable/buttonselector"
            android:textColor="@color/Dark_Green"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonGroupTranspo"
            android:layout_below="@+id/blockSizeGroup"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone">

            <Button
                android:id="@+id/encrypt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="encrypt"
                android:textColor="@color/Dark_Green"
                android:background="@drawable/buttonselector" />

            <Button
                android:id="@+id/decrypt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="decrypt"
                android:layout_toRightOf="@+id/encrypt"
                android:textColor="@color/Dark_Green"
                android:background="@drawable/buttonselector"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/transpooutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blksizegroupfromhome"
            android:background="@drawable/edittextborder"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/outputTextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/output"
                android:textColor="@color/Dark_Green"/>
            <TextView
                android:id="@+id/outputText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/Neon_Green"
                android:layout_margin="10dp"
                android:focusable="true"
                android:scrollbars="vertical"
                android:layout_below="@+id/outputTextLabel"/>
        </RelativeLayout>

        <Button
            android:id="@+id/transpohelpbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Dark_Green"
            android:text="How is it done?"
            android:background="@drawable/buttonselector"
            android:layout_below="@id/transpooutput"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"/>
        </RelativeLayout>
</RelativeLayout>
</ScrollView>