<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@color/dark_grey">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/actionBartranspohelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbartranspohelp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_below="@+id/actionBartranspohelp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical">
            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.36"
                android:background="@drawable/edittextborder">
                    <TextView
                        android:id="@+id/inputlabeltranspohelp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Dark_Green"
                        android:text="Input"
                        android:layout_marginTop="10dp"/>
                    <LinearLayout
                        android:layout_below="@+id/inputlabeltranspohelp"
                        android:id="@+id/textContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:animateLayoutChanges="true"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:scrollbars="vertical|horizontal">
                    </LinearLayout>
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.49"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittextborder">
        <TextView
            android:id="@+id/keysizelabeltranspohelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Block Size"
            android:textColor="@color/Dark_Green"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/keysizetranspohelp"
            android:layout_below="@id/keysizelabeltranspohelp"
            android:layout_width="wrap_content"
            android:layout_height= "wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/Neon_Green"/>
        </RelativeLayout>
            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.44"
                android:background="@drawable/edittextborder">
                    <TextView
                        android:id="@+id/outputlabeltranspohelp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Dark_Green"
                        android:text="Output"
                        android:layout_marginTop="10dp"/>
                    <LinearLayout
                        android:layout_below="@+id/outputlabeltranspohelp"
                        android:id="@+id/outputlayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:scrollbars="vertical|horizontal">
                    </LinearLayout>
            </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.6"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/transpohelpprevious"
            android:background="@drawable/ic_skip_previous"
            />
        <Button
            android:id="@+id/transpohelpreset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_refresh"/>
        <Button
            android:id="@+id/transpohelpnext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_skip_next"
            />

    </LinearLayout>
 </LinearLayout>
</RelativeLayout>
