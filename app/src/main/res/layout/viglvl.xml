<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/redwall">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2">
            <TextView
            android:id="@+id/cipherlvl2"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:text=' BIG LELB SFGR SAXS GR AMLQYOSAE UY RTURSGSTSGNM LGOFAQ. YNT MAAE SN SYOA "NOAM" SN NOAM SFA ENNQ. SFAQACNQA, SFA BMRWAQ GR "NOAM". G WGRF YNT DNNE JTLI.'
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_centerInParent="true"
            />
        <RelativeLayout
            android:id="@+id/answerGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:visibility="invisible">
            <TextView
                android:id="@+id/scroll"
                android:layout_width="305dp"
                android:layout_height="181dp"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:background="@drawable/scroll"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <EditText
                android:id="@+id/answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Answer"
                android:inputType="textPersonName"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:visibility="visible"/>
            <Button
                android:id="@+id/btnsub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="submit"
                android:visibility="visible"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/answer"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/hintGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible">
            <ImageView
                android:id="@+id/bookimg"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/book5"
                android:visibility="visible"/>
            <ImageButton
                android:id="@+id/bookclose"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_alignParentEnd="true"
                android:src="@drawable/closebutton"
                android:visibility="visible"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3">

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3">
            <ImageButton
                android:id="@+id/vaultdoor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dbldoor1"
                android:background="@null"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3">

        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">

        <ImageButton
            android:id="@+id/book"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/book5"
            android:background="@null"
            />

    </RelativeLayout>

</LinearLayout>
    <include
        android:id="@+id/includeFAB"
        layout="@layout/fabs" />
</RelativeLayout>