<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.krypto.Fragments.Home.HomeFrag">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/titleHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "READ IN TEXT HERE"
        android:gravity="center"
        android:textSize ="20dp"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/homeText"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="Enter text here"
        android:gravity="bottom"
        android:layout_below="@id/titleHome"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/homeText"
        android:layout_centerInParent="true">
    <Button
        android:id="@+id/readButt"
        android:layout_height="50dp"
        android:layout_width="wrap_content"
        android:text = "Read Text"
        android:layout_centerInParent="true"
        android:layout_below="@+id/homeText"/>
     <Button
         android:id="@+id/resetButt"
         android:layout_width="wrap_content"
         android:layout_height="50dp"
         android:text="reset"
         android:layout_toRightOf="@+id/readButt"
         android:layout_below="@+id/homeText"/>
    </LinearLayout>

</RelativeLayout>
