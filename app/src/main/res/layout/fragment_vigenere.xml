<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
    <TextView
        android:id="@+id/titleVig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vigenere Cipher"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:id="@+id/vigETextGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below = "@id/titleVig"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/inputkey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Keyword"
            android:inputType="textPersonName"
            android:textIsSelectable="true"
            />
        <EditText
            android:id="@+id/inputPT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Text"
            android:inputType="textPersonName"
            android:textIsSelectable="true"
            android:layout_below="@id/inputkey"/>
            </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/textGroupVig"
        android:layout_below="@+id/vigBtnGroup">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/outputLabelVig"
        android:text="Vigenere Cipher Output"
        android:textSize="10dp" />
    <TextView
        android:id="@+id/Output"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textIsSelectable="true"
        android:layout_below="@+id/outputLabelVig"
        android:scrollbars="vertical"/>
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vigBtnGroup"
            android:layout_below="@+id/vigETextGroup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btnEnc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encrypt"
             />
        <Button
            android:id="@+id/btnDec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decrypt"
            android:layout_toRightOf="@+id/btnEnc"
             />
        </RelativeLayout>

    <Button
        android:id="@+id/btnreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="RESET"
        android:layout_below="@+id/textGroupVig"/>

</RelativeLayout>
</ScrollView>